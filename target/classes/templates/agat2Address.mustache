<html>
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <style media="all">
        body {
            background: rgba(250, 250, 180, 0.37);
            margin: 30px 0px 100px 100px;
            font-size: 20px;
        }

        a {
            text-decoration: none;
            color: white;
        }

        a:hover {
            color: #151CFF;
        }

        .table, .td1, .td {
            border: 1px solid black;
        }

        .table {
            width: 80%;
            border-collapse: collapse;

        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        td {
            text-align: center;
        }

        th {
            border: 1px solid black;
        }

        .btn-del {
            border: 1px solid #800000;
            background: #A80000;
        }

        .td2 {
            width: 30px;
        }

        .ted {
            margin-top: 20px;
        }

        input {
            width: 200px;
            height: 30px;
            background: #ebeff3;
            border: 1px solid black;
            margin-bottom: 10px;
        }

        .btn-add, .btn-find {
            width: 100px;
            height: 30px;
            background: #ebeff3;
            border: 1px solid black;
        }

        .myak {
            margin-top: 20px;
        }

        .myak:hover {
            color: #6d6d6d;
        }

        .find {
            margin-bottom: 10px;
        }

        .find:hover {
            color: #6d6d6d;
        }

        .main-page {
            font-size: 15px;

            margin-bottom: 10px;
        }

        .main-page-a {
            color: black;
        }
    </style>
</head>
<body>
    <div class="main-page"><a class="main-page-a" href="/main2">Главная</a></div>
    <div class="find">Добавление данных &raquo;</div>
    <div>
        <form class="find-move" method="post">
            <div><input type="hidden" name="_csrf" value="{{_csrf.token}}"/></div>
            <div><input type="text" name="ID" placeholder="Введите ID"/></div>
            <div><input type="text" name="PID" placeholder="Введите PID"/></div>
            <div><input type="text" name="TYPE_ADDRESS_ID" placeholder="Введите тип адресса"/></div>
            <div><input type="text" name="LOCALITY" placeholder="Введите населенный пункт"/></div>
            <div><input type="text" name="STREET" placeholder="Введите улицу"/></div>
            <div><input type="text" name="HOUSE" placeholder="Введите дом"/></div>
            <div><input type="text" name="BODY" placeholder="Введите корпус"/></div>
            <div><input type="text" name="APARTMENT" placeholder="Введите квартиру"/></div>
            <div>
                 <button class="btn-add" type="submit">Добавить</button>
            </div>
        </form>
    </div>
    <div class="myak"> Поиск по Pid &raquo;</div>
    <div class="ted">
        <form class="move" method="post" action="filterAgat2Address">
            <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
            <input type="text" name="filterAgat2AddressFilter">
            <button class="btn-find" type="submit">Найти</button>
        </form>
    </div>
        <table class="table">
            <tr>
                <th>Id</th>
                <th>Pid</th>
                <th>Type address</th>
                <th>Locality</th>
                <th>Street</th>
                <th>House</th>
                <th>Body</th>
                <th>Apartment</th>
                <th>Delete</th>
            </tr>
            {{#agat2AddressTable}}
            <tr>
                <td class="td1">{{id}}</td>
                <td class="td1">{{pid}}</td>
                <td class="td">{{locality}}</td>
                <td class="td">{{#street}}{{street}}{{/street}}</td>
                <td class="td">{{#house}}{{house}}{{/house}}</td>
                <td class="td">{{#body}}{{body}}{{/body}}</td>
                <td class="td">{{#apartment}}{{apartment}}{{/apartment}}</td>
                <td class="td td2">
                    <button
                            class="btn-del"><a href="delete_agat2Address/{{id}}">Delete</a></button>
                </td>
            </tr>
            {{/agat2AddressTable}}

        </table>
        <script type="text/javascript">
        $(document).ready(function () {
            $(".move").hide();
            $(".myak").click(function () {
                $(".move").slideToggle();
            });

            $(".find-move").hide();
            $(".find").click(function () {
                $(".find-move").slideToggle();
            });
         });
        </script>

</body>
</html>