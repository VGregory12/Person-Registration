<div id="login-form">
    <h1>Авторизация</h1>

    <fieldset>
        <form action="/login" method="post">
            <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
            <input name="username" type="email" required value="Логин" onBlur="if(this.value=='')this.value='Логин'"
                   onFocus="if(this.value=='Логин')this.value='' ">
            <input name="password" type="password" required value="Пароль"
                   onBlur="if(this.value=='')this.value='Пароль'" onFocus="if(this.value=='Пароль')this.value='' ">
            <input type="submit" value="ВОЙТИ">
            <footer class="clearfix">
                <p><a href="/registration">Регистрация</a></p>
            </footer>
        </form>
    </fieldset>

</div>

</body>
</html>